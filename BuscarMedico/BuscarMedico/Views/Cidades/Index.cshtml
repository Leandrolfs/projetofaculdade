@model IEnumerable<BuscarMedico.Models.cidades>

@{
    ViewBag.Title = "Cidades";
}

<h2></h2>

<p>
    @Html.ActionLink("Adicionar nova cidade", "Adicionar", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            CIDADES
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.IDCidade })<span class="glyphicon glyphicon-pencil"></span> |
                @Html.ActionLink("Excluir", "Excluir", new { id = item.IDCidade }, new { @class = "excluir" })<span class="glyphicon glyphicon-trash"></span>
            </td>
        </tr>
    }

</table>

